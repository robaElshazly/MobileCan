@model MobileCan.Models.ProductViewModel
<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="@Url.Action(actionName: "Details", controllerName: "Product", routeValues: new { Id = Model.Id })">
        <img class="card-img-top" src="@(Model.Images?.FirstOrDefault())" alt=""></a>
        <div class="card-body">
            <h4 class="card-title">
                @Html.ActionLink(linkText: Model.Name, actionName: "Details", controllerName: "Product", routeValues:new { Id = Model.Id },htmlAttributes:null)
            </h4>
            <h5>@Model.Price</h5>
            <p class="card-text">@Model.Description</p>
        </div>
        <div class="card-footer">
            <small class="text-muted">@Model.Rating</small>
        </div>
    </div>
</div>